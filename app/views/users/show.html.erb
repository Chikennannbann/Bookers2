<div>
  <h2>User info</h2>
  <%= image_tag @user.get_profile_image %>
   <table>
     <tr><th>name</th><td><%= @user.name %></td></tr>
     <tr><th>introduction</th><td><%= @user.introduction %></td></tr>
   </table>
</div>

<div>
  <% if @user == current_user %>
  <p><%= link_to "edit profile", edit_user_path(@user.id)%></p>
   <% else %>
   <p><%= link_to "edit profile", user_path(@user.id)%></p>
  <% end %>
</div>

<h2>Books</h2>
<table>
  <thead>
    <tr>
      <th colspan= "1"></th>
      <th><h4>Title</h4></th>
      <th><h4>Opinion</h4></th>
    </tr>
  </thead>

  <tbody>
     <% @books.each do |f| %>
     <tr>
       <td><%= f.user.name %></td>
       <td><%= link_to f.title, book_path(f.id) %></td>
       <td><%= f.body %></td>
     </tr>
     <% end %>
  </tbody>
</table>
