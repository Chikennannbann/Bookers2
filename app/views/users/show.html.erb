<%= flash[:notice] %>
<%= flash[:notice4] %>

<div>
  <h1>User info</h1>
  <%= image_tag @user.get_profile_image %>
   <table>
     <tr><th>name</th><td><%= @user.name %></td></tr>
     <tr><th>introduction</th><td><%= @user.introduction %></td></tr>
   </table>
</div>

<div>
  <% if @user == current_user %>
  <p><%= link_to(edit_user_path) do %></p>
      <i class="fa-solid fa-user-gear"></i>
     <% end %>
   <% else %>
   <p><%= link_to(user_path(current_user.id)) do %></p>
       <i class="fa-solid fa-user-gear"></i>
      <% end %>
  <% end %>
</div>


<h1>New book</h1>
<%= form_with model: @book do |f|%>
 <h4>Title</h4>
  <%= f.text_field :title %>
 <h4>Opinion</h4>
  <p><%= f.text_area :body %></p>
 <%= f.submit 'Create book' %>
<% end %>

<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th colspan= "1"></th>
      <th><h4>Title</h4></th>
      <th><h4>Opinion</h4></th>
    </tr>
  </thead>

  <tbody>
     <% @books.each do |f| %>
     <tr>
       <td><%= image_tag @user.get_profile_image %></td>
       <td><%= link_to f.title, book_path(f.id) %></td>
       <td><%= f.body %></td>
     </tr>
     <% end %>
  </tbody>
</table>
