<%= flash[:notice] %>
<%= flash[:notice4] %>

<div class="container">
 <div class="row">
  <div class="col-md-3">
   <h2>User info</h2>
   <%= image_tag @user.get_profile_image %>
   <table class="table">
     <tr><th>name</th><td><%= @user.name %></td></tr>
     <tr><th>introduction</th><td><%= @user.introduction %></td></tr>
   </table>

   <% if @user == current_user %>
    <button class"btn btn-outline-secondary btn-lg"><%= link_to(edit_user_path) do %>
      <i class="fa-solid fa-user-gear"></i>
      <% end %>
    </button>
     <% else %>
    <p><%= link_to(user_path(current_user.id)) do %></p>
       <i class="fa-solid fa-user-gear"></i>
     <% end %>
   <% end %>

   <h2>New book</h2>
    <%= form_with model: @book do |f|%>
     <h4>Title</h4>
     <%= f.text_field :title %>
     <h4>Opinion</h4>
     <p><%= f.text_area :body %></p>
     <button type="submit" class="btn btn-success">
     <% f.submit %>Create book
     </button>
    <% end %>
  </div>

  <div class="col-md-1"></div>

  <div class="col-md-8">
   <h2>Books</h2>
   <table class="table">
    <thead>
     <tr>
      <th colspan= "1"></th>
      <th><h4>Title</h4></th>
      <th><h4>Opinion</h4></th>
     </tr>
    </thead>

    <tbody>
     <% @books.each do |f| %>
     <tr>
       <td><%= image_tag @user.get_profile_image %></td>
       <td><%= link_to f.title, book_path(f.id) %></td>
       <td><%= f.body %></td>
     </tr>
     <% end %>
    </tbody>
   </table>
  </div>
 </div>
</div>