<%= flash[:notice] %>
<%= flash[:notice4] %>

<div class="container">
 <div class="row">
  <div class="col-md-3">
   <h2>User info</h2>
   <%= image_tag @user.get_profile_image %>
   <table class="table">
     <tr><th>name</th><td><%= @user.name %></td></tr>
     <tr><th>introduction</th><td><%= @user.introduction %></td></tr>
   </table>

  <%= render 'profile', user: @user %>

   <h2 class="mt-3">New book</h2>
    <%= form_with model: @book do |f|%>
     <p>Title</p>
     <%= f.text_field :title %>
     <p>Opinion</p>
     <p><%= f.text_area :body %></p>
     <button type="submit" class="btn btn-success">
     <% f.submit %>Create book
     </button>
    <% end %>
  </div>

  <div class="col-md-1"></div>

  <div class="col-md-8">
   <h2>Books</h2>
   <table class="table">
    <thead>
     <tr>
      <th colspan= "1"></th>
      <th><h4>Title</h4></th>
      <th><h4>Opinion</h4></th>
     </tr>
    </thead>

    <tbody>
     <% @books.each do |f| %>
     <tr>
       <td><%= image_tag @user.get_profile_image %></td>
       <td><%= link_to f.title, book_path(f.id) %></td>
       <td><%= f.body %></td>
     </tr>
     <% end %>
    </tbody>
   </table>
  </div>
 </div>
</div>