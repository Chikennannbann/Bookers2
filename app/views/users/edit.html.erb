
  <div class="mx-auto mt-3">

   <h2>User info</h2>

   <% if @user.errors.any? %>
    <%= @user.errors.count %>errors prohibited this object from being saved:
    <ul>
     <% @user.errors.full_messages.each do |message| %>
     <li><%= message %></li>
     <% end %>
    </ul>
   <% end %>

   <%= form_with model: @user do |f| %>
    <div class="field">
     <%= f.label :Name %><br>
     <%= f.text_field :name %>
    </div>

    <div class="field">
     <%= f.label :Image %><br>
     <%= f.file_field :profile_image, accept: "image/*" %>
    </div>

    <div class="field">
     <%= f.label :Introduction %><br>
     <%= f.text_area :introduction %>
    </div>

     <%= f.submit 'Update User', class: "btn btn-secondary" %>

   <% end %>
  </div>
