<div class="container">
 <div class="row">
  <div class="mx-auto">

   <h2>User info</h2>

   <% if @user.errors.any? %>
    <%= @user.errors.count %>errors prohibited this object from being saved:
    <ul>
     <% @user.errors.full_messages.each do |message| %>
     <li><%= message %></li>
     <% end %>
    </ul>
   <% end %>

   <%= form_with model: @user do |f| %>
    <p>Name</p>
     <%= f.text_field :name %>

    <p class="pt-3">Image</p>
     <%= f.file_field :profile_image, accept: "image/*" %>

    <p class="pt-3">Introduction</p>
     <p><%= f.text_area :introduction %></p>
     <button type="submit" class="btn btn-secondary">
      <% f.submit %>Update User
     </button>
   <% end %>
  </div>
 </div>
</div>