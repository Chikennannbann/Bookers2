<div>
  <h1>User info</h1>
  <%= image_tag @user.get_profile_image %>
   <table>
     <tr><th>name</th><td><%= @user.name %></td></tr>
     <tr><th>introduction</th><td><%= @user.introduction %></td></tr>
   </table>
</div>

<div>
  <p><%= link_to "edit profile", edit_user_path(@user.id)%></p>
</div>

<h1>New book</h1>
<%= form_with model: @book do |f|%>
 <h4>Title</h4>
  <%= f.text_field :title %>
 <h4>Opinion</h4>
  <p><%= f.text_area :body %></p>
 <%= f.submit 'Create book' %>
<% end %>


<h1>Users</h1>
<table>
  <thead>
    <tr>
      <th><h4>image</h4></th>
      <th><h4>Name</h4></th>
      <th colspan= "3"></th>
    </tr>
  </thead>

  <tbody>
     <% @users.each do |f| %>
     <tr>
       <td><%= image_tag f.get_profile_image %></td>
       <td><%= f.name %></td>
       <td><%= link_to "Show", user_path(f.id) %></td>
     </tr>
     <% end %>
  </tbody>
</table>
