<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/5c69d7ea39.js" crossorigin="anonymous"></script>
  </head>

  <body>
   <header class="bg-dark text-white">
     <nav class="navbar navbar-expand-lg navbar-dark">
       <div class="container">

      <% if user_signed_in? %>
       <a class="navbar-brand" href="https://dd76390bee7846278ba639e1f9b91fdb.vfs.cloud9.us-east-1.amazonaws.com/users/" >Bookers</a>
       <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
               aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
       </button>

        <div class="collapse navbar-collapse" id="navbarNavDropdown">
         <ul class="navbar-nav ml-auto">
          <li class="nav-item py-2">
          <%= link_to(user_path(current_user.id)) do %>
           <i class="fa-solid fa-house-chimney"></i> Home
          <% end %>
          </li>
          <li class="nav-item py-2">
          <%= link_to(users_path) do %>
           <i class="fa-solid fa-users"></i> User
          <% end %>
          </li>
          <li class="nav-item py-2">
           <%= link_to(books_path) do %>
           <i class="fa-solid fa-book-open"></i> Books
           <% end %>
          </li>
          <li class="nav-item py-2">
           <%= link_to(destroy_user_session_path, method: :delete) do %>
           <i class="fa-solid fa-right-from-bracket"></i> Log out
           <% end %>
          </div>
         </li>

      <% else %>
       <a class="navbar-brand" href="https://dd76390bee7846278ba639e1f9b91fdb.vfs.cloud9.us-east-1.amazonaws.com/">Bookers</a>
       <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
               aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
       </button>

       <div class="collapse navbar-collapse" id="navbarNavDropdown">
         <ul class="navbar-nav ml-auto">
          <li class="nav-item py-2">
           <%= link_to(root_path) do %>
            <i class="fa-solid fa-house-chimney"></i> Home
           <% end %>
          </li>
          <li class="nav-item py-2">
           <%= link_to(about_path) do %>
            <i class="fa-solid fa-link"></i> About
           <% end %>
          </li>
          <li class="nav-item py-2">
            <%= link_to(new_user_registration_path) do %>
             <i class="fa-solid fa-user-plus"></i> Sign up
            <% end %>
          </li>
          <li class="nav-item py-2">
            <%=link_to(new_user_session_path) do %>
             <i class="fa-solid fa-right-to-bracket"></i> Log in
            <% end %>
          </li>
        <% end %>
        </ul>
       </div>
      </div>
     </nav>
   </header>
   <main class="mt-3">
    <%= yield %>
   </main>

    <footer>
     <div class="container mt-5">
      <div class="row">
       <div class="mx-auto">
       <p>CopyRight Infratop.inc</p>
       </div>
      </div>
     </div>
    </footer>
  </body>
</html>
