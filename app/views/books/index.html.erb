<div>
  <h1>User info</h1>
  <%= image_tag @bookss.get_profile_image %>
   <table>
     <tr><th>name</th><td><%= @bookss.name %></td></tr>
     <tr><th>introduction</th><td><%= @bookss.introduction %></td></tr>
   </table>
</div>

<div>
 <p><%= link_to "edit profile", user_path(current_user.id) %></p>
</div>


<h1>New book</h1>
<%= form_with model: @book do |f|%>
 <h4>Title</h4>
  <%= f.text_field :title %>
 <h4>Opinion</h4>
  <p><%= f.text_area :body %></p>
 <%= f.submit 'Create book' %>
<% end %>


<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th colspan= "1"></th>
      <th><h4>Title</h4></th>
      <th><h4>Opinion</h4></th>
    </tr>
  </thead>

  <tbody>
     <% @books.each do |f| %>
     <tr>
       <td><p><%= link_to image_tag f.user.get_profile_image %></p></td>
       <td><%= link_to f.title, book_path(f.id) %></td>
       <td><%= f.body %></td>
     </tr>
     <% end %>
  </tbody>
</table>
