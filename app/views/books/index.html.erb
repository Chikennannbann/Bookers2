<% if @book.errors.any? %>
 <%= @book.errors.count %>errors prohibited this object from being saved:
 <ul>
  <% @book.errors.full_messages.each do |message| %>
   <li><%= message %></li>
  <% end %>
 </ul>
<% end %>


<div class="col-md-8 offset-md-1">
 <div class="row">
  <div class="col-md-3 mt-3">
   <%= render 'users/userinfo', user: @user %>

 <div class="row">
  <%= link_to edit_user_path(@user.id), class: "btn btn-outline-secondary btn-block col-12" do %>
      <i class="fa-solid fas fa-user-cog"></i>
  <% end %>
 </div>

   <%= render 'newbook', book: @book %>

  </div>

  <div class="col-md-1"></div>

  <div class="col-md-8 mt-3">
   <h2>Books</h2>
    <table class="table">
     <thead>
      <tr>
       <th colspan= "1"></th>
       <th>Title</th>
       <th>Opinion</th>
      </tr>
     </thead>

     <tbody>
      <% @books.each do |f| %>
       <tr>
        <td><%= link_to user_path(f.user.id) do %>
            <%= image_tag f.user.get_profile_image %>
           <% end %>
           <!--写真、動画などはdo-endにしたら繋がることがある-->
        </td>
        <td><%= link_to f.title, book_path(f.id) %></td>
        <td><%= f.body %></td>
       </tr>
      <% end %>
     </tbody>
    </table>
  </div>
 </div>
</div>
