<%= flash[:notice1] %>
<%= flash[:notice2] %>

<div class="container">
 <div class="row">
  <div class="col-md-3">
   <h2>User info</h2>
    <%= image_tag @books.user.get_profile_image %>
    <table class="table">
     <tr><th>name</th><td><%= @books.user.name %></td></tr>
     <tr><th>introduction</th><td><%= @books.user.introduction %></td></tr>
    </table>

   <% if @books.user == current_user %>
    <div class="row">
    <%= link_to edit_user_path(@books.user.id), class: "btn btn-outline-secondary btn-block col-12" do %>
       <i class="fa-solid fa-user-gear"></i>
       <% end %>
    </div>
   <% else %>
    <div class="row">
     <%= link_to user_path(current_user.id), class: "btn btn-outline-secondary btn-block col-12" do %>
       <i class="fa-solid fa-user-gear"></i>
       <% end %>
    </div>
   <% end %>

   <h2 class="mt-3">New book</h2>
   <%= form_with model: @book do |f|%>
    <p>Title</p>
    <%= f.text_field :title %>
    <p>Opinion</p>
    <p><%= f.text_area :body %></p>
     <button type="submit" class="btn btn-success">
     <% f.submit %>Create book
     </button>   <% end %>
  </div>

  <div class="col-md-1"></div>

  <div class="col-md-8">
    <h2>Book detail</h2>
     <table class="table">
      <tbody>
       <tr>
        <td><p><%= image_tag @books.user.get_profile_image %></p>
           <p><%= link_to @books.user.name,  user_path(@books.user.id) %></p>
        </td>
        <td><%= link_to @books.title, book_path(@books.id) %></td>
        <td><%= @books.body %></td>

         <% if @books.user == current_user %>
         <td><%= link_to'Edit', edit_book_path(@books), class: "btn btn-success btn-sm" %></td>
         <td><%= link_to 'Destroy', book_path(@books), method: :delete, class: "btn btn-danger btn-sm" %></td>
        <% end %>
       </tr>

      </tbody>
     </table>
  </div>
 </div>
</div>