<h1>New book</h1>
<%= form_with model: @book do |f|%>
 <h4>Title</h4>
  <%= f.text_field :title %>
 <h4>Opinion</h4>
  <%= f.text_area :body %>
 <%= f.submit 'Create book' %>
<% end %>


<h2>Book detail</h2>
<table>
  <tbody>
     <tr>
       <td><%= @books.user.name %></td>
       <td><%= link_to @books.title, book_path(@books.id) %></td>
       <td><%= @books.body %></td>
       <td>Edit</td>
       <td>
        <% if @books.user == current_user %>
         <%= link_to 'Destroy', book_path(@books), method: :delete %>
        <% end %>
       </td>
     </tr>

  </tbody>
</table>