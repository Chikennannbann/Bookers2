<h2 class="mt-3">New book</h2>
   <%= form_with model: book do |f|%>
    <div class="field">
     <%= f.label :Title %><br>
     <%= f.text_field :title %>
    </div>
    <div class="field">
     <%= f.label :Opinion %><br>
     <%= f.text_area :body %>
    </div>
     <button type="submit" class="btn btn-success">
     <% f.submit %>Create book
     </button>   <% end %>